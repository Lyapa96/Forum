@model IEnumerable<Forum.Models.Section>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a>
    </p>
</div>

    @for (int i = 0; i < Model.Count() / 3 +1; i++)
    {
        <div class="row">
            @for (int j = 0; j < 3; j++)
            {
                if (i*3 + j == Model.Count())
                {
                    break;
                    
                }
            <div class="col-md-4">
                <h2>@Model.ElementAt(i*3+j).Name</h2>
                @foreach (var subj in @Model.ElementAt(i * 3 + j).Subjects.Take(5))
                {
                    <p>@subj.Name @subj.CreationDate @subj.User.Login</p>
                }
            </div>
            }
        </div>
    
    }
       

